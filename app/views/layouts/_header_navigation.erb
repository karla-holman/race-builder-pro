                        <div class="col-xs-7">
                          <div class="heading">
                              <%= Horse.find(notification.recv_id).name %>
                          </div>
                          <div class="description pull-left"> Suggested to enter <%= Race.find(notification.send_id).name %></div>
                          <div class="date pull-left"><%= notification.created_at.strftime('%b %d, %Y') %></div>
                        </div>
                        <div class="col-xs-5">
                          <%= link_to 'OK', notification, method: :delete, :class => 'btn btn-primary btn-mini' %>
