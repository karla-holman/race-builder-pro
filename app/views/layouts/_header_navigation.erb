          </ul>
        </div>
        <!-- END TOP NAVIGATION MENU -->
        <!-- BEGIN CHAT TOGGLER -->
        <div class="pull-right">
          <div class="chat-toggler"> <a href="#" class="dropdown-toggle" id="my-task-list" data-placement="bottom"  data-content='' data-toggle="dropdown" data-original-title="Notifications">
            <div class="user-details">
              <div class="username">
                <% if current_user.admin?
                  @notifications = Notification.all - Notification.where("action = (?) OR action = (?) OR action = (?) OR action = (?) OR action = (?) OR action = (?) OR action = (?)", "Suggest", "Confirm Nomination", "Add Approved", "Remove Approved", "Remove Denied", "Add Denied", "Status Changed")
                  else
                    all_suggestions = Notification.where("action = (?) OR action = (?) OR action = (?) OR action = (?) OR action = (?) OR action = (?) OR action = (?)", "Suggest", "Confirm Nomination", "Add Approved", "Remove Approved", "Remove Denied", "Add Denied", "Status Changed")
                    inactive = Status.find_by_name('Inactive')
                    if current_user.trainer?
                      horses = Horse.where(:trainer_id => current_user.id).where.not(:status => inactive)
                      horse_ids = horses.pluck(:id)
                      @notifications = all_suggestions.where("recv_id IN (?)", horse_ids)
                    elsif current_user.user?
                      horses = Horse.where(:owner_id => current_user.id).where.not(:status => inactive)
                      horse_ids = horses.pluck(:id)
                      @notifications = all_suggestions.where("recv_id IN (?)", horse_ids)
                    end
                  end
                %>
                <% if @notifications %>
                  <span class="badge badge-important">
                    <%= @notifications.length %>
                  </span>
                <% end %> 
                <%= current_user.name %>
                </div>
            </div>
            <div class="iconset top-down-arrow"></div>
          </a>
