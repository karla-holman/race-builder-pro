                      </div>
                      <div class="clearfix"></div>
                    </div>
                    <% elsif notification.action == 'Nominate' %>%>
                      <div class="message-wrapper row">
                        <div class="col-xs-7">
                          <div class="heading">
                              <%= Horse.find(notification.recv_id).name %>
                          </div>
                          <div class="description pull-left"> Nominated for <%= Race.find(notification.send_id).name %></div>
                          <div class="date pull-left"><%= notification.created_at.strftime('%b %d, %Y') %></div>
                        </div>
                        <div class="col-xs-5">
                          <%= link_to 'Accept', notification, method: :approve, :class => 'btn btn-primary btn-mini' %>
                          <%= link_to 'Deny', notification, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-mini' %>
                        </div>
                      </div>
                      <div class="clearfix"></div>
                    </div>
                    <% elsif notification.action == 'Add Approved' ||  notification.action == 'Remove Approved'%>
                      <div class="message-wrapper row">
                        <div class="col-xs-7">
                          <div class="heading">
                              <%= Horse.find(notification.recv_id).name %>
                          </div>
                          <div class="description pull-left"> Approved For <%= Equipment.find(notification.send_id).name %> Change</div>
                          <div class="date pull-left"><%= notification.created_at.strftime('%b %d, %Y') %></div>
                        </div>
                        <div class="col-xs-5">
                          <%= link_to 'OK', notification, method: :delete, :class => 'btn btn-danger btn-mini' %>
                        </div>
                      </div>
                      <div class="clearfix"></div>
                    </div>
                    <% elsif notification.action == 'Add Denied' ||  notification.action == 'Remove Denied'%>
                      <div class="message-wrapper row">
                        <div class="col-xs-7">
                          <div class="heading">
                              <%= Horse.find(notification.recv_id).name %>
                          </div>
                          <div class="description pull-left"> Denied For <%= Equipment.find(notification.send_id).name %> Change</div>
                          <div class="date pull-left"><%= notification.created_at.strftime('%b %d, %Y') %></div>
                        </div>
                        <div class="col-xs-5">
                          <%= link_to 'OK', notification, method: :delete, :class => 'btn btn-danger btn-mini' %>
                        </div>
                      </div>
                      <div class="clearfix"></div>
                    </div>
                    <% elsif notification.action == 'Status Changed' ||  notification.action == 'Remove Denied'%>
                      <div class="message-wrapper row">
                        <div class="col-xs-7">
                          <div class="heading">
                              <%= Horse.find(notification.recv_id).name %>
                          </div>
                          <div class="description pull-left"> Now On <%= Status.find(notification.send_id).name %></div>
                          <div class="date pull-left"><%= notification.created_at.strftime('%b %d, %Y') %></div>
                        </div>
                        <div class="col-xs-5">
                          <%= link_to 'OK', notification, method: :delete, :class => 'btn btn-danger btn-mini' %>
                        </div>
                      </div>
                      <div class="clearfix"></div>
                    </div>
                    <% elsif notification.action == 'Confirm Nomination' %>
                      <div class="message-wrapper row">
                        <div class="col-xs-7">
                          <div class="heading">
                              <%= Horse.find(notification.recv_id).name %>
                          </div>
                          <div class="description pull-left"> Confirm for <%= Race.find(notification.send_id).name %></div>
                          <div class="date pull-left"><%= notification.created_at.strftime('%b %d, %Y') %></div>
                        </div>
                        <div class="col-xs-5">
                          <%= link_to 'OK', notification, method: :approve, :class => 'btn btn-primary btn-mini' %>
                        </div>
                      </div>
                      <div class="clearfix"></div>
                    </div>
                    <% else %>
                      <div class="message-wrapper row">
                        <div class="col-xs-7">
                          <div class="heading">
                              <%= Horse.find(notification.send_id).name %>
                          </div>
                          <div class="description pull-left">Requested to <%= notification.action %> <%= Equipment.find(notification.recv_id).name %></div>
                          <div class="date pull-left"><%= notification.created_at.strftime('%b %d, %Y') %></div>
                        </div>
                        <div class="col-xs-5">
                          <%= link_to 'Approve', notification, method: :approve, :class => 'btn btn-primary btn-mini' %>
                          <%= link_to 'Deny', notification, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-mini' %>
                        </div>
                      </div>
                      <div class="clearfix"></div>
                    </div>
                    <% end %>
                <% end %>
              <% else %>
                <p>No Notifications </p>
              <% end %>
            </div>
          </div>
