<%= form_for(@horse_condition) do |f| %>
  <% if @horse_condition.errors.any? %>
  <div class="row">
    <div class="col-xs-12">
      <div id="error_explanation">
        <h2><%= pluralize(@horse_condition.errors.count, "error") %> prohibited this horse condition from being saved:</h2>
        <ul>
        <% @horse_condition.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-6">  
    <div class="form-group">
      <div class="form-group">
        <%= f.label 'Horse' %>
        <%= f.collection_select :horse_id, @horses, :id, :name, {:include_blank => 'Please Select'}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'Condition' %>
        <%= f.collection_select :condition_id, @conditions, :id, :name, {:include_blank => 'Please Select'}, class: 'form-control' %>
      </div>
    <div class="form-group">
      <%= f.submit :class => 'btn btn-success btn-sm'%>
      <%= link_to 'Back', horse_conditions_path, :class => 'btn btn-danger btn-sm' %>
    </div>
  </div>
<% end %>
