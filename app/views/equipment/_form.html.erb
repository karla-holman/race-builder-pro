
<%= form_for(@equipment) do |f| %>
  <div class="row">
    <div class="col-xs-12">
        <% if @equipment.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@equipment.errors.count, "error") %> prohibited this equipment or medication from being saved:</h2>
            <ul>
              <% @equipment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
    </div>
    <div class="col-xs-12 col-md-6">  
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :autofocus => true, class: 'form-control'%>
      </div>
      <div class="checkbox">
          <%= f.check_box :required, :autofocus => true, class: 'form-control'%> <%= f.label :required %>
      </div>
      <div class="form-group">
        
      </div>
      <div class="form-group">
        <%= f.submit "Save Equipment / Medication", :class => 'btn btn-success btn-sm'%>
        <%= link_to 'Back', equipment_index_path, :class => 'btn btn-danger btn-sm' %>
      </div>
    </div>
  </div>
<% end %>


