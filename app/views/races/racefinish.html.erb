<div class="row">
	<ol class="breadcrumb">
	  <li><%= link_to 'Race List', races_path %></li>
	  <li class="active"><%= @race.name %></li>
      <li><%= link_to 'Before Race View', @race %></li>
	</ol>
	<div class="col-xs-12 horse-info">
		<h1><%= @race.name %></h1>
	</div>
	<div class="col-xs-6">
		<table class="table table-condensed table-hover generic-table">
			<thead>
				<tr>
					<th>Name</th>
        	<th colspan="1"></th>
        	<th colspan="1"></th>
				</tr>
			</thead>
			<tbody>
        <% @confirmed.each do |horse| %>
          <tr class="top">
            <td><%= horse.name %></td>
            <td>
            <% if RaceWinner.where(:horse_id => horse.id, :race_id => @race.id).any? %>
            	WON
            <% elsif Horserace.where(:horse_id => horse.id, :race_id => @race.id, :status => 'Scratched').any? %>
            	SCRATCHED
            <% else %>
            	<button class="winner btn btn-primary btn-xs" horse="<%= horse.id%>" race="<%= @race.id%>">Winner</button>
            <% end %>
            </td>
            <td>
            	<% if Horserace.where(:horse_id => horse.id, :race_id => @race.id, :status => 'Scratched').any? %>
            		SCRATCHED 
            	<% else %>
            		<button class="scratch btn btn-danger btn-xs" horse="<%= horse.id%>" race="<%= @race.id%>">Scratch</button>
            	<% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
		</table>
	</div>
</div>