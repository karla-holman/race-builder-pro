<% if @horse %>
	<%= collection_select(:menu, :horse_id, @horses.sort_by { |hsh| hsh[:name] }, :id, :name, {:selected => @horse.id, :include_blank => 'None'}) %>
<% else %>
	<%= collection_select(:menu, :horse_id, @horses.sort_by { |hsh| hsh[:name] },:id, :name, {:prompt => 'Please select a horse'}) %>
<% end %>