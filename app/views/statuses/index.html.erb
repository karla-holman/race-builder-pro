<div class="row">
  <div class="col-xs-12">
    <h1>RBP Statuses</h1>
    <%= link_to 'New Status', new_status_path, :class => 'btn btn-primary btn-xs' %>
    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @statuses.each do |status| %>
          <tr>
            <td><%= status.name %></td>
            <td>
              <%= link_to 'Edit', edit_status_path(status), :class => 'btn btn-warning btn-xs' %>
              <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



