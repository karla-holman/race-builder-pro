<% if current_user.admin? %>
<div class="row">
  <div class="col-xs-12">
    <h2>Activity Log</h2>
  </div>
  <div class="col-xs-12">
    <div class="grid simple">
      <div class="grid-body no-border">
        <div class="row">
          <div class="col-xs-12">
            <table class="genericTable table table-condensed table-hover">
              <thead>
                <tr>
                  <th>User</th>
                  <th>Activity</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <% @activities.each do |activity| %>
                  <tr>
                    <td>
                    	<% if activity.owner %>
                    		<%= link_to activity.owner.name, activity.owner %>
						<% else %>
							N/A
						<% end %>
                    </td>
                    <td>
                      <%= render_activity activity %>
                    </td>
                    <td>
                    	<%= activity.created_at.strftime('%b %d, %Y at %l:%M %P') %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
