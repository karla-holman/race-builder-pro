<td>
  <%= user.name %>
</td>
<td>
  <%= link_to user.email, user %>
</td>
<td>
  <%= form_for(user) do |f| %>
    <%= f.select(:role, User.roles.keys.map {|role| [role,role]}) %>
    <%= f.submit 'Change Role', :class => 'btn btn-success btn-mini' %>
  <% end %>
</td>
<td>
	<%= link_to("Edit", edit_user_path(user), :class => 'btn btn-warning btn-mini') unless user == current_user %>
	<%= link_to("Delete", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger btn-mini') unless user == current_user %>
</td>
