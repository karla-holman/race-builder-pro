<div class="row">
  <div class="col-xs-12">
    <h2>RBP Categories</h2>
    <%= link_to 'New Condition Category', new_category_path, :class => 'btn btn-primary btn-small' %>
  </div>
  <div class="col-xs-12">
    <div class="grid simple">
      <div class="grid-body no-border">
        <div class="row">
          <div class="col-xs-12">
            <table class="genericTable table table-condensed table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th colspan="1"></th>
                </tr>
              </thead>
              <tbody>
                <% @categories.each do |category| %>
                  <tr>
                    <td><%= category.name %></td>
                    <td>
                      <%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-warning btn-mini' %>
                      <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-mini' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>