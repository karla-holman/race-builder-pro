<ul class="breadcrumb">
	<li><%= link_to 'Meet List', meets_path %></li>
	<li class="active"><%= @meet.name %></li>
</ul>
<div class="row">
  <div class="col-xs-12">
    <h2><%= @meet.name %></h2>
    <h4><%= @meet.race_days %> days</h4>
	<p>Start Date: <%= @meet.start_date.strftime('%b %d, %Y') %></p>
	<p>End Date: <%= @meet.end_date.strftime('%b %d, %Y') %></p>
	<% if current_user.admin? %>
		<%= link_to 'New Week', new_week_path({week: {:meet_id=> @meet.id}}), :class => 'btn btn-primary btn-mini' %>
		<%= link_to 'Deactivate Horses', '/meets/'+@meet.id.to_s+'/deactivate_horses', :class => 'btn btn-danger btn-mini' %>
		<%= link_to 'Reset Races', '/meets/'+@meet.id.to_s+'/reset_races', :class => 'btn btn-info btn-mini' %>
	<% end %>
  </div>
  <div class="col-xs-12">
    <div class="grid simple">
      <div class="grid-body no-border">
        <div class="row">
          <div class="col-xs-12">
            <table class="genericTable table table-condensed table-hover">
              	<thead>
					<tr>
						<th>Week Number</th>
						<th>Week Start</th>
						<th>Week End</th>
						<th colspan="1"></th>
					</tr>
				</thead>
				<tbody>
					<% @weeks.each do |week| %>
		        	<tr>
		        	<td><%= week.week_number %></td>
		          	<td><%= week.start_date.strftime('%b %d, %Y') %></td>
		          	<td><%= week.end_date.strftime('%b %d, %Y') %></td>
		          	<td>
		          	<%= link_to 'Show', week, :class => 'btn btn-primary btn-mini' %>
		            	<%= link_to 'Edit', edit_week_path({week: {:meet_id=> @meet.id}}), :class => 'btn btn-warning btn-mini', 'data-no-turbolink' => true %>
		            	<%= link_to 'Delete', week, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger   btn-mini' %></td>
		        	</tr>
	        		<% end %>
		    	</tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>