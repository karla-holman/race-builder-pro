<div id="horse_state_code_wrapper">
  <% parent_region ||= params[:parent_region] %>
  <% country = Carmen::Country.coded(parent_region) %>

  <% if country.nil? %>
    <em>Please select a country above</em>
  <% elsif country.subregions? %>
    <%= subregion_select(:horse, :subregion_code, parent_region) %>
  <% else %>
    <%= text_field(:horse, :subregion_code) %>
  <% end %>
</div>