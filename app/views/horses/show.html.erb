<ul class="breadcrumb">
	<li><%= link_to 'Stable', horses_path %></li>
	<li class="active"><%= @horse.name %></li>
	<li><%= link_to 'Go To Race Menu', races_menu_path(:horse_id => @horse.id) %></li>
</ul>
<div class="row">
  <div class="col-md-12">
    <div class="grid simple">
      <div class="grid-body no-border">
        <div class="row">
        	<div class="col-md-3">
        		<h3>Equipment/Medication:</h3>
        		<div id="equipmentPartial">
							<%= render 'equipment' %>
						</div>
				<h4>Last Claiming Level: </h4>
						<%= render 'last_claimingprice' %>
        	</div>
        	<div class="col-md-6">
        		<div class="center">
	        		<h2><%= @horse.name %> (<%= @horse.POB %>)</h2>
	        		<h4><%= @horse.breed %></h4>
	        		<h4>Age: <% def age(dob)
	                  now = Time.now.utc.to_date
	                  now.year - dob
	                	end %>
	                	<%= age(@horse.birth_year) %>
	            	</h4>
	            <h4><%= @horse.week_running %> Week Running</h4>
							<h4><%= @startsLeft %> Starts Left</h4>
							<h4>(Starts: <%= @horse.starts %> Wins: <%= @horse.wins %>)</h4>
						</div>
						<table id="racestatus-table" class="table table-condensed table-hover">
							<thead>
								<tr>
									<th>Name</th>
									<th>Distance</th>
									<th>Total #</th>
									<th>I/C</th>
									<th style="display: none;">Conditions</th>
									<th style="display: none;">Race Description</th>
								</tr>
							</thead>
							<tbody id="race-list">
								<% if @races %>
									<%= render 'races' %>
								<% end %>
							</tbody>
						</table>
        	</div>
	        <div class="col-md-3">
						<h4>Status:</h4>
						<%= render 'status' %>
						<h4>Last Win: </h4>
						<%= render 'last_win' %>
						
	        </div>
	      </div>
      </div>
    </div>
  </div>
</div>
<script>
	/* Formating function for row details */
	function fnFormatDetails ( oTable, nTr )
	{
		var aData = oTable.fnGetData( nTr );
		var sOut = '<table cellpadding="5" cellspacing="0" border="0" style="padding-left:50px;" class="inner-table">';
		sOut += '<tr><td>Conditions: </td><td>'+aData[5]+'</td></tr>';
		sOut += '<tr><td>Race Description:</td><td>'+aData[6]+'</td></tr>';
		sOut += '</table>';
	 
		return sOut;
	}
</script>