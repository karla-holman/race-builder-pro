<%= form_for(@horse) do |f| %>
  <% if @horse.errors.any? %>
  <div class="row">
    <div class="col-xs-12">
      <div id="error_explanation">
        <h2><%= pluralize(@horse.errors.count, "error") %> prohibited this horse from being saved:</h2>

        <ul>
        <% @horse.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-6">  
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: 'Name' %>
    </div>
    <div class="form-group">
      <%= f.label :gender %><br/>
      <%= select_tag(:gender, options_for_select([['Male' ,'Male'], ['Female', 'Female']]), class: 'form-control') %>
    </div>
    <div class="form-group">
      <%= f.label 'DOB' %>
      <%= f.text_field :DOB, :autofocus => true, class: 'date-picker form-control' %>
    </div>
     <div class="form-group">
      <%= f.label 'Owner' %>
      <%= f.text_field :owner_id, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :trainer_id %>
      <%= f.text_field :trainer_id, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit :class => 'btn btn-success btn-sm'%>
      <%= link_to 'Back', horses_path, :class => 'btn btn-danger btn-sm' %>
    </div>
  </div>
  <div class="col-xs-12 col-md-6">
    <div class="form-group">
      <%= f.label :starts %>
      <%= f.text_field :starts, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :firsts %>
      <%= f.text_field :firsts, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :seconds %>
      <%= f.text_field :seconds, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :thirds %>
      <%= f.text_field :thirds, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :earnings %>
      <%= f.text_field :earnings, :autofocus => true, class: 'form-control' %>
    </div>
  </div>
<% end %>
