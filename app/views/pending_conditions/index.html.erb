<h1>Listing pending_conditions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_conditions.each do |pending_condition| %>
      <tr>
        <td><%= link_to 'Show', pending_condition %></td>
        <td><%= link_to 'Edit', edit_pending_condition_path(pending_condition) %></td>
        <td><%= link_to 'Destroy', pending_condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pending condition', new_pending_condition_path %>
