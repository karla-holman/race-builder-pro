<h1>Listing tels</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tels.each do |tel| %>
      <tr>
        <td><%= link_to 'Show', tel %></td>
        <td><%= link_to 'Edit', edit_tel_path(tel) %></td>
        <td><%= link_to 'Destroy', tel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

