<div class="row">
  <div class="col-xs-12">
    <h1>Tels</h1>
    <% if current_user.admin? %>
      <%= link_to 'New Tel', new_tel_path, :class => 'btn btn-primary btn-xs' %>
    <% end %>
    <table class="table table-condensed table-hover generic-table">
      <thead>
        <tr>
          <th>Weekend Start Date</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @tels.each do |tel| %>
          <tr>
            <td><%= tel.weekend_start.strftime('%b %d, %Y') %></td>
            <td>
              <%= link_to 'Show', tel, :class => 'btn btn-primary btn-xs' %>
              <%= link_to 'Edit', edit_tel_path(tel), :class => 'btn btn-warning btn-xs', 'data-no-turbolink' => true %>
              <%= link_to 'Destroy', tel, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger   btn-xs' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
