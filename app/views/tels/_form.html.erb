<%= form_for(@tel) do |f| %>
  <% if @tel.errors.any? %>
  <div class="row">
    <div class="col-xs-12">
      <div id="error_explanation">
        <h2><%= pluralize(@tel.errors.count, "error") %> prohibited this day from being saved:</h2>
        <ul>
        <% @tel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    </div>
    <div class="col-xs-12 col-md-6">  
      <div class="form-group">
        <%= f.label 'Date' %>
        <%= date_field("tel", "date") %>
        <%= f.hidden_field :week_id, :value => @week.id %>
      </div>
      <div class="form-group">
        <%= f.label 'Number of Races' %>
        <%= f.select :num_races, options_for_select(0..20) %>
      </div>
      <div class="form-group">
        <%= f.submit :class => 'btn btn-success btn-sm'%>
        <%= link_to 'Back', @week, :class => 'btn btn-danger btn-sm' %>
      </div>
    </div>
  </div>
<% end %>
