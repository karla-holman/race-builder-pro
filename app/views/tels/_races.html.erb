<% if @tel.races.empty? %>
	<tr style="height: 100px;">
		<td></td>
	    <td></td>
	    <td></td>
	    <td></td>
	    <td></td>
  	</tr>
<% else %>
	<% @tel.races.each do |race| %>
	  <tr>
	    <td><%= race.race_type %></td>
	    <td><%= race.name %></td>
	    <td><strong><%= race.horseraces.where(:status => "Interested").count %></strong></td>
	    <td><strong><%= race.horseraces.where(:status => "Confirmed").count %></strong></td>
	    <td><button type="button" class="btn btn-danger btn-mini remove_from_day" race="<%=race.id%>">Remove</button></td>
	  </tr>
	<% end %>
<% end %>