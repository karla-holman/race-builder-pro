<div class="row">
  <div class="col-xs-6">
    <h2>Eligible <%= @day %> Races</h2>
    <div id="race-day" data-day="<%= @day %>"></div>
    <div id="dialog-confirm" title="Protocol or Alternate?"></div>
    <table id="drag-table" class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Purse</th>
          <th>Claiming Level</th>
          <th># Commited</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @races.each do |race| %>
          <tr class="top">
            <td><%= race.name %></td>
            <td><%= race.description %></td>
            <td>
              <% if race.claiming_purse? %>
                <%= number_to_currency(race.claiming_purse, precision: 2) %>
              <% else %>
                <%= number_to_currency(0, precision: 2) %>
              <% end %>
            </td>
            <td>
              <% if race.claiming_level? %>
                <%= number_to_currency(race.claiming_level, precision: 2) %>
              <% else %>
                <%= number_to_currency(0, precision: 2) %>
              <% end %>
            </td>
            <td><%= race.horseraces.where(:status => "confirmed").count %></td>
            <td><%= link_to 'Add to TEL', new_tel_path(:race_id => race.id, :day => @day), :class => 'btn btn-primary btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-xs-6">
    <h2>Races to Run</h2>
    <table id="tel-table" class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>Race Type</th>
          <th>Name</th>
          <th>Description</th>
          <th># Committed</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% if @tels.empty? %>
          <tr>
            <td><div style="min-height: 300px;"></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
        <% @tels.each do |tel| %>
          <tr>
            <% race = Race.find(tel.race_id) %>
            <td><%= tel.section %></td>
            <td><%= race.name %></td>
            <td><%= race.description %></td>
            <td><%= race.horseraces.where(:status => "confirmed").count %></td>
            <td><%= link_to 'Remove from TEL', tel, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger   btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-xs-12">
    <div class="row">
      <% if @day != "Friday" %>
        <div class="col-xs-3 well userbox">
          <%= link_to "Friday "+@friday.to_s, tels_friday_path %>
        </div>
      <% end %>
      <% if @day != "Saturday" %>
        <div class="col-xs-3 well userbox">    
          <%= link_to "Saturday "+@saturday.to_s, tels_saturday_path %>
        </div>
      <% end %>
      <% if @day != "Sunday" %>
        <div class="col-xs-3 well userbox">
          <%= link_to "Sunday "+@sunday.to_s, tels_sunday_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>






