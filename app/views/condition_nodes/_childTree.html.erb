<%= simple_form_for(child) do |f| %>
	<div class="row">
		<div class="col-xs-12" style="margin-bottom:30px">
			<div class="row">
				<div class="col-xs-12" style="text-align: center">
					<button style="margin-bottom: 10px" class="addParentOperator btn btn-success btn-mini" value="Add Parent Operator" node="<%= child.id%>">
					+ Parent Op</button>
				</div>
				<div class="col-xs-12" style="text-align: center">
					<button style="margin-bottom: 10px" class="removeNode btn btn-danger btn-mini" value="Remove Node" node="<%= child.id%>">
					- </button>
				</div>
				<div class="col-xs-12" style="text-align: center">
					<% if child.isOperator %>
				  		<%= f.select :value, options_for_select([["AND", 1], ["OR", 0]], child.value), {}, { :class => 'childSelector', :node => child.id } %>
				  	<% else %>
				  	<%= f.select :value, options_from_collection_for_select(Condition.all, :id, :categoryAndName, {:selected => child.value}), {:prompt => 'Select...'}, { :class => 'childSelector', :node => child.id } %>
				  	<% end %>
				</div>
				<% if child.isOperator %>
					<div class="col-xs-6" style="text-align: right">
						<button style="margin-bottom: 10px" class="addChildOperator btn btn-primary btn-mini" value="Add Child Operator" node="<%= child.id%>">+ Child Op</button>
					</div>
				  	<div class="col-xs-6" style="text-align: left">
		  				<button style="margin-bottom: 10px" value="Add Condition" class="addCondition btn btn-info btn-mini" node="<%= child.id%>">+ Cond</button>
		  			</div>
		  		<% end %>
	  		</div>
		</div>
		<% old_child = child %>
		<div class="col-xs-12">
			<div class="row">
				<% if old_child.children.length > 0 %>
					<%= colSize = (12/old_child.children.length).floor 
						if colSize < 3
							colSize = 3
						end
					%>
				<% end %>
			  	<% old_child.children.each do |child| %>
			  		<div class="col-xs-<%= colSize %>" syle="margin-bottom:30px">
			  			<%= render partial: 'childTree' , locals: { :child => child } %>
				  	</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>